@model PagedList.IPagedList<ReadNewsWebClient.Models.Article>
@using PagedList.Mvc;
@using PagedList;

 
<div class="container-fluid pb-4 pt-4 paddding">
    <div class="container paddding">
        <div class="row mx-0">
            <div class="col-md-8 animate-box" data-animate-effect="fadeInLeft">
                <div>
                    <div class="fh5co_heading fh5co_heading_border_bottom py-2 mb-4">News</div>
                </div>
                @foreach (var item in Model)
                {

                    <div class="row pb-4">
                        <div class="col-md-5">
                            <div class="fh5co_hover_news_img">
                                <div class="fh5co_news_img"><img src="@item.GetImageUrl()" alt="" /></div>
                                <div></div>
                            </div>
                        </div>
                        <div class="col-md-7 animate-box">
                            @Html.ActionLink(item.Title, "Read", "Article", new { id = item.Id }, new { @class = "fh5co_magna py-2 font-auto" })
                            <a href="single.html" class="fh5co_mini_time py-3">

                                @item.CreatedAt.ToString("MMMM dd, yyyy")
                            </a>
                            <div class="fh5co_consectetur">
                                @item.Description
                            </div>
                        </div>
                    </div>
                }


            </div>
            <div class="col-md-3 animate-box" data-animate-effect="fadeInRight">
                <div>
                    <div class="fh5co_heading fh5co_heading_border_bottom py-2 mb-4">Tags</div>
                </div>
                <div class="clearfix"></div>
                <div class="fh5co_tags_all">
                    @*@foreach (var item in Model.ListCategories)
                    {
                        <a href="#" class="fh5co_tagg">@item.Name</a>
                    }*@

                </div>
                <div>
                    <div class="fh5co_heading fh5co_heading_border_bottom pt-3 py-2 mb-4">Most Popular</div>
                </div>
                @for(int i = 0; i < 3; i++)
                {

                    <div class="row pb-3">
                        <div class="col-5 align-self-center">
                            <img src="@Model[i].GetImageUrl()" alt="img" class="fh5co_most_trading" />
                        </div>
                        <div class="col-7 paddding">
                            @Html.ActionLink(Model[i].Title, "Read", "Article", new { id = Model[i].Id }, new { @class = "most_fh5co_treding_font line-cutoff text-black" })
                            <div class="most_fh5co_treding_font_123">@Model[i].CreatedAt.ToString("MMMM dd, yyyy")</div>
                        </div>
                    </div>
                }

            </div>
        </div>
        <div class="row mx-0 animate-box" data-animate-effect="fadeInUp">
            <div class="col-12 text-center pb-4 pt-4">
                <a href="#" class="btn_mange_pagging"><i class="fa fa-long-arrow-left"></i>&nbsp;&nbsp; Previous</a>
                <a href="#" class="btn_pagging">1</a>
                <a href="#" class="btn_pagging">2</a>
                <a href="#" class="btn_pagging">3</a>
                <a href="#" class="btn_pagging">...</a>
                <a href="#" class="btn_mange_pagging">Next <i class="fa fa-long-arrow-right"></i>&nbsp;&nbsp; </a>
            </div>
        </div>
    </div>
</div>
@*End news 2 colums*@

<div class="page-separate">
    <p class="page-separate-text">Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) / @Model.PageCount</p>

    @Html.PagedListPager(Model, page => Url.Action("RenderPagedList", "Article", new { page }))
</div>
