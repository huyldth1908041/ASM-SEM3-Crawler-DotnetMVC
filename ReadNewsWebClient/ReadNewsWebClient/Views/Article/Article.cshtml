@{
    ViewBag.Title = "ReadArticle";
    var listCategory = (List<ReadNewsWebClient.Models.Category>)ViewBag.listCategory;
    var listArticle = (List<ReadNewsWebClient.Models.Article>)ViewBag.listArticle;
}
@section PageStyles {
    <link href="@Url.Content("~/Content/Css/article.css")" rel="stylesheet" />
}
