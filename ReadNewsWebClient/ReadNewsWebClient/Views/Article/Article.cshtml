<div id="fh5co-single-content" class="container-fluid pb-4 pt-4 paddding">
    <div class="container paddding">
        <div class="row mx-0">
            <div class="col-md-8 animate-box" data-animate-effect="fadeInLeft">
                <h1 class="article-title">@Model.Title.Replace('.', ' ')</h1>
                <p class="article-description">@Model.Description</p>
                <div class="article-container">
                    @Html.Raw(Model.Content)
                </div>
                <div class="button-article">
                    <a href="#" class="save-articles btn btn-primary">Lưu</a>
                    <div class="footer_mediya_icon">
                        <div class="text-center d-inline-block">
                            <a class="fh5co_display_table_footer">
                                <div class="fh5co_verticle_middle"><i class="fa fa-linkedin"></i></div>
                            </a>
                        </div>
                        <div class="text-center d-inline-block">
                            <a class="fh5co_display_table_footer">
                                <div class="fh5co_verticle_middle"><i class="fa fa-google-plus"></i></div>
                            </a>
                        </div>
                        <div class="text-center d-inline-block">
                            <a class="fh5co_display_table_footer">
                                <div class="fh5co_verticle_middle"><i class="fa fa-twitter"></i></div>
                            </a>
                        </div>
                        <div class="text-center d-inline-block">
                            <a class="fh5co_display_table_footer">
                                <div class="fh5co_verticle_middle"><i class="fa fa-facebook"></i></div>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-3 animate-box" data-animate-effect="fadeInRights">
                <div>
                    <div class="fh5co_heading fh5co_heading_border_bottom py-2 mb-4">Danh Mục</div>
                </div>
                <div class="clearfix"></div>
                <div class="fh5co_tags_all">
                    @foreach (var item in listCategory)
                    {
                        <a href="#" class="fh5co_tagg">@item.Name</a>
                    }
                </div>
                <div>
                    <div class="fh5co_heading fh5co_heading_border_bottom pt-3 py-2 mb-4">Tin Tiêu Điểm</div>
                </div>
                @for (int i = 0; i < 6; i++)
                {
                    <div class="row pb-3">
                        <div class="col-5 align-self-center">
                            <img src="@listArticle[i].GetImageUrl()" alt="img" class="fh5co_most_trading" />
                        </div>
                        <div class="col-7 paddding">
                            @Html.ActionLink(listArticle[i].Title, "Read", "Article", new { id = listArticle[i].Id }, new { @class = "most_fh5co_treding_font line-cutoff text-black" })
                            <div class="most_fh5co_treding_font_123">@listArticle[i].CreatedAt.ToString("MMM dd, yyyy")</div>
                        </div>
                    </div>
                }

            </div>
        </div>
    </div>
</div>
<div class="container-fluid pb-4 pt-5">
    <div class="container animate-box">
        <div>
            <div class="fh5co_heading fh5co_heading_border_bottom py-2 mb-4">Tin Nổi Bật</div>
        </div>
        <div class="owl-carousel owl-theme" id="slider2">
            @for (int i = 0; i < 6; i++)
            {
                <div class="item px-2">
                    <div class="fh5co_hover_news_img">
                        <div class="fh5co_news_img"><img src="@listArticle[i].GetImageUrl()" alt="img" /></div>
                        <div>
                            @Html.ActionLink(listArticle[i].Title, "Read", "Article", new { id = listArticle[i].Id }, new { @class = "d-block fh5co_small_post_heading" })
                            <div class="c_g"><i class="fa fa-clock-o"></i> @listArticle[i].CreatedAt.ToString("MMM dd, yyyy")</div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
@section scripts {
    <script src="@Url.Content("~/Content/Js/jquery.stellar.min.js")"></script>
}
